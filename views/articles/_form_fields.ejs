<div class="form_group">
    <label class="mt-4" for="title">Title</label>
    <input required type="text" value="<%= article.title %>" name="title" id="title" class="form-control">
</div>
<div class="form_group">
    <label class="mt-4" for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form_group">
    <label class="mt-4" for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>
<div class="mt-4">
    <a href="/" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
</div>